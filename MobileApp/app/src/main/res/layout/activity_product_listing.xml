<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_product_listing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="shueching.mobileapp.ProductListingActivity">

        <RelativeLayout android:id="@+id/layout1" android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onViewContent"
                        android:tag="3DcAM01">
            <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/threedcam01" android:scaleType="fitCenter"/>
            <TextView
                    android:id="@+id/textViewDescription1"
                    android:text="3D Camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/imageView1"
                    android:layout_marginBottom="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <TextView
                    android:id="@+id/textViewPrice1"
                    android:text="$1500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/imageView1"
                    android:layout_below="@id/textViewDescription1"
                    android:layout_marginBottom="5dp"
                    android:tag="1500" android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        </RelativeLayout>
        <View
                android:id="@+id/separator1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:layout_below="@id/layout1"
                android:background="@android:color/darker_gray"/>
        <RelativeLayout android:id="@+id/layout2" android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/separator1"
                        android:onClick="onViewContent"
                        android:tag="USB02">
            <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/usb02" android:scaleType="fitCenter"/>
            <TextView
                    android:id="@+id/textViewId2"
                    android:text="usb02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/imageView2"
                    android:layout_marginBottom="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <TextView
                    android:id="@+id/textViewDescription2"
                    android:text="External Hard Drive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/imageView2"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@id/textViewId2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <TextView
                    android:id="@+id/textViewPrice2"
                    android:text="$800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/imageView2"
                    android:layout_below="@id/textViewDescription2"
                    android:layout_marginBottom="5dp"
                    android:tag="800" android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        </RelativeLayout>
        <View
                android:id="@+id/separator2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:layout_below="@id/layout2"
                android:background="@android:color/darker_gray"/>
        <RelativeLayout android:id="@+id/layout3" android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/separator2"
                        android:onClick="onViewContent"
                        android:tag="wristWear03">
            <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/wristwear03" android:scaleType="fitCenter"/>
            <TextView
                    android:id="@+id/textViewId3"
                    android:text="wristwear03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/imageView3"
                    android:layout_marginBottom="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <TextView
                    android:id="@+id/textViewDescription3"
                    android:text="Wrist Watch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/imageView3"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@id/textViewId3"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            <TextView
                    android:id="@+id/textViewPrice3"
                    android:text="$300"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/imageView3"
                    android:layout_below="@id/textViewDescription3"
                    android:layout_marginBottom="5dp"
                    android:tag="300" android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        </RelativeLayout>
        <View
                android:id="@+id/separator3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:layout_below="@id/layout3"
                android:background="@android:color/darker_gray"/>
    </RelativeLayout>
</ScrollView>